#!/usr/bin/env bash

set -eu
set -o pipefail

BIN_DIR="$(cd $(dirname $0) && pwd)"

. "$BIN_DIR/_local_chain.incl.sh"


mkdir -p "$MOUNT_DIR"

set +u
if [[ -z "$NODE_URL" ]]; then
    NODE_URL="http://127.0.0.1:$NODEOS_PORT/"
fi
set -u

$EOS_DOCKER run --rm --network "$EOS_NETWORK" \
    -v "$MOUNT_DIR":/mounted \
    eosio/eos-dev /opt/eosio/bin/cleos \
    -u "$NODE_URL" \
    --wallet-url http://127.0.0.1:"$KEOSD_PORT"/ \
    "$@"
